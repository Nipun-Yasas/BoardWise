datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("Student")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
